        <script><![CDATA[(function executeRule(current, previous) {

	var Counter = new TaskCounter({isBatch: true});
	var payload = Counter.getTotalForAll();
	var parsedOutput = JSON.parse(payload);

	parsedOutput.forEach(function(output) {
		for (var userID in output) {
			var userRecord = new GlideRecord("sys_user");
			if (userRecord.get(userID + "")) {
				if (gs.nil(current.value)) {
					userRecord.setValue("x_441902_task_ac_total_incidents_assigned", 0);
					userRecord.setValue("x_441902_task_ac_task_assignment_summary", "");
					userRecord.setValue("x_441902_task_ac_raw_assignment_payload", "");
					userRecord.setWorkflow(false);
					userRecord.update();
				} else {
					userRecord.setValue(
						"x_441902_task_ac_raw_assignment_payload", 
						JSON.stringify(output)
					);
					userRecord.update();
				}
			}
		}
	});

})(current, previous);]]></script>
